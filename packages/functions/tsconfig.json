{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext", // Ensure this is 'es2015' or later
    "moduleResolution": "NodeNext", // This is correct
    "baseUrl": ".",
    "paths": {
      "core/*": ["../core/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
